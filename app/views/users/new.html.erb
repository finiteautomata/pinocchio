<h1> New user </h1>

<% if @user.errors.any? %>
    <div class="errors">
        <h2> There have been some errors with your signup </h2>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
    </div>
<% end %>
<%= form_for @user do |f| %>
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name %>

    <%= f.label :email, "Email" %>
    <%= f.email_field :email %>

    
    <%= f.label :password, 'Password' %>
    <%= f.password_field :password %>


    <%= f.label :password_confirmation, 'Repeat your password' %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Sign up" %>
<% end %>